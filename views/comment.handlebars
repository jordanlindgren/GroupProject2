<div class="card entry-card col-12">
    <div class="card-body">
        <div class="col-md-3 mx-auto">
            <div class="card" id="createMeme">
                <h5 id="meme-id" class="hidden-id">{{id}}</h5>
                <img src="{{image.img_url}}" class="card-img-top" alt="meme picture">
                <p class="card-text" style="font-size: 25px; text-align: center;">{{meme_text}}</p>
            </div>
                <h6 class="card-subtitle mb-2 text-muted" style="margin-top: 10px;">Posted by: {{user.username}}</h6>
        </div>
    </div>   
</div> 

{{#each comments as |comment|}}    
<div class="card entry-card col-10 mx-auto" id="commentContainer" style="margin-top: 10px">
    <div class="card-body" >
        <h6 class="card-subtitle mb-2 text-muted mx-auto" id="commentData">Comment by: {{comment.user.username}}</h6>
        <p class="card-text">{{comment.comment_text}}</p>
    </div>
</div>  
{{/each}}   

{{#if logged_in}}
<form class= "col-10 comment-submit-form mx-auto text-center" style="padding-left: 0px">
    <div class="form-group mx-auto">
        <label for="formGroupExampleInput2" style="margin-top: 10px;">Add a comment</label>
        <input type="text" class="form-control text-center mx-auto" id="new-comment-text" placeholder="Input comment here">
    </div>
    <div class="mx-auto">
        <button id= "comment-submit-button" type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

<script src="/js/comment.js"></script>
{{/if}}

